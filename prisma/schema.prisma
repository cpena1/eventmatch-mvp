datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Vendor {
  id             String   @id @default(cuid())
  name           String
  slug           String   @unique
  category       String
  cuisine        String?
  priceTier      Int
  minGuests      Int      @default(0)
  maxGuests      Int?
  leadTimeDays   Int      @default(1)
  basePrice      Int?
  city           String?
  region         String?
  description    String?
  phone          String?
  email          String?
  website        String?
  imageUrl       String?
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
